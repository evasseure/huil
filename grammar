variable        : ID

assignment      : LET variable ASSIGN expr

factor          : (PLUS | MINUS factor)
                    | INTEGER 
                    | LPAREN expr RPAREN
                    | variable LPAREN (factor COMMA)* (variable)? RPAREN
                    | variable

term            : factor ((MUL | DIV | MOD) factor)*

expr            : term ((PLUS | MINUS) term)*

function        : DEF variable LPAREN (variable COMMA)* (variable)? RPAREN COLON EOL statement_list

statement       : (assignment | function | expr)

statement_list  : (statement EOL)*

program         : statement_list EOF
